#include<bits/stdc++.h>
using namespace std;
class Hocsinh{
	private:
		string mahs,hoten;
		float toan,van,anh;
	public:
		Hocsinh(string mahs,string hoten,float toan,float van,float anh){
			this->mahs="00000";
			this->hoten="nguyen van a";
			this->toan=0;
			this->van=0;
			this->anh=0;
		}	
		void nhap(){
			fflush(stdin);
			getline(cin.mahs);
			getline(cin.hoten);
			cin>>toan>>van>>anh;
		}
		float dtb(){
			return (toan+van+anh)/3;
		}
		void xuat(){
			cout<<mahs<<endl;
			cout<<hoten<<endl;
			cout<<toan<<van<<anh<<endl;
			cout<<"diemtb"<<dtb();
		}
};
